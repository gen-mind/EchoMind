# EchoMind Embedder Service Configuration
# Copy to .env and fill in your values for local development

# gRPC Server
EMBEDDER_GRPC_PORT=50051
EMBEDDER_GRPC_MAX_WORKERS=10

# Health Check
EMBEDDER_HEALTH_PORT=8080

# Model Configuration
EMBEDDER_MODEL_NAME=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDER_MODEL_CACHE_LIMIT=1
EMBEDDER_BATCH_SIZE=32

# Device
EMBEDDER_PREFER_GPU=true

# Qdrant (for vector storage)
EMBEDDER_QDRANT_HOST=localhost
EMBEDDER_QDRANT_PORT=6333

# Logging
EMBEDDER_LOG_LEVEL=INFO
