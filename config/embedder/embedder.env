# EchoMind Embedder Service Configuration
# Used by docker-compose cluster deployment

# gRPC Server
EMBEDDER_GRPC_PORT=50051
EMBEDDER_GRPC_MAX_WORKERS=10

# Health Check
EMBEDDER_HEALTH_PORT=8080

# Model Configuration
# NVIDIA embedding model - see docs/services/embedder-service.md
# nvidia/llama-nemotron-embed-1b-v2: 1B params, 2048 dim, ~2-4GB VRAM (BF16)
EMBEDDER_MODEL_NAME=nvidia/llama-nemotron-embed-1b-v2
EMBEDDER_MODEL_CACHE_LIMIT=1
EMBEDDER_BATCH_SIZE=32

# Device
EMBEDDER_PREFER_GPU=true

# Logging
EMBEDDER_LOG_LEVEL=INFO
